{
  "comments": {
    // we actually use code to intercept this and comment properly
    // "lineComment": "REM "
  },

  "folding": {
    "markers": {
      "start": "(\\s*(DEFPROC|IF|ELSE)\\b)",
      "end": "(\\s*(ENDPROC|ENDIF|ELSE)\\b|$)"
    }
  },

  // symbols used as brackets
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ]
}
